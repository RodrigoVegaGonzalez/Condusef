<div class="modal fade" id="modalDatosUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Dar alta empresa</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="flex-row row my-3">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="label-control">Usuario</label>
                            <div class="col nopadding">
                                <div class="input-group">
                                    <input class="form-control" id="usuario"/>

<div class="modal" id="modalProductosReune" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Subir Excel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group col-12" id="Archivo_Amorti">
                    @Html.Label("", string.Format("{0}", "Cargar archivo"), new { @class = "control-label" })
                    <div class="col nopadding input-group">
                        <label class="input-group-btn">
                            <span class="btn btn-primary">
                                Buscar &hellip;<input class="w-75" type="file" style="display: none;" id="labelinput" name="UploadedFile" accept=".xlsx,.xls," onchange='CambiaFakePath(this)' />
                            </span>

                        </label>
                        <input class="file-path form-control" type="text" id="inputname" readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="container">
                    <button id="btn_datosUsuario_close" type="button" class="btn btn-danger btn-block-modal" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary btn-block-modal" id="subirLayoutBtn">Subir</button>
                </div>
            </div>
        </div>
    </div>
</div>



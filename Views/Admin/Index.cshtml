        </div>
    </div>
</div>

<div class="modal fade" id="modalTokenUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Cambiar token usuario</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="flex-row row my-3">
                    <div class="col-9">
                        <div class="form-group">
                            <label class="label-control">Id Usuario</label>
                            <div class="col nopadding">
                                <div class="input-group">
                                    <input class="form-control" id="id-usuario" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <label class="label-control">Servicio</label>
                            <select class="form-control" id="servicio" name="opciones">
                                <option value="1">REDECO</option>
                                <option value="2">REUNE</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="flex-row row my-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="label-control">Token</label>
                            <div class="col nopadding">
                                <div class="input-group">
                                    <input class="form-control" id="token" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="container">
                    <button id="btn_datosUsuario_close" type="button" class="btn btn-danger btn-block-modal" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary btn-block-modal" id="btn_cambiarToken">Cambiar token</button>
                </div>
            </div>
        </div>
    </div>
</div>

